<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Auth.AuthActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo1" />

        <TextView
            android:id="@+id/attantion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_textview"
            android:text="@string/lorem"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:typeface="normal" />




        <TextView
            android:id="@+id/connecting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="CONNECT TO \nPHONE NUMBER"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="26sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:typeface="normal" />

        <EditText
            android:id="@+id/edittext_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_edittext"
            android:digits="0123456789"
            android:drawableStart="@drawable/ic_smartphone_black_24dp"
            android:drawablePadding="10dp"
            android:ems="12"
            android:hint="Phone number"
            android:text="998"
            android:inputType="phone"
            android:maxLength="12"
            android:visibility="gone"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_edittext"
            android:digits="0123456789"
            android:drawableStart="@drawable/ic_verified_user_black_24dp"
            android:drawablePadding="10dp"
            android:ems="12"
            android:hint="Enter code:"
            android:inputType="phone"
            android:maxLength="12"
            android:padding="15dp"
            android:textColorHint="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />


        <Button
            android:id="@+id/getVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_ui"
            android:text="NEXT"
            android:textColor="#000"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_ui"
            android:text="Verify code"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
        <Button
            android:id="@+id/btndone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_ui"
            android:text="Done"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:visibility="visible"
            android:typeface="monospace" />




    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>